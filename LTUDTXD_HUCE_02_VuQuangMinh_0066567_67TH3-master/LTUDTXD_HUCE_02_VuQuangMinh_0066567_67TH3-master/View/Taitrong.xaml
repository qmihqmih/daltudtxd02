<Window x:Class="LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.View.Taitrong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.View"
        mc:Ignorable="d"
        Title="Taitrong" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Tải trọng" FontSize="15" FontWeight="Bold" FontFamily="arialblack" Margin="0 70 0 0" Width="184" Height="158" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel Background="White" Orientation="Vertical">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Content="Lực dọc N   =" FontSize="12" FontWeight="Medium" />
                    <TextBox Width="40" Height="22" FontWeight="Medium" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Content="Lực cắt Qx  =" FontSize="12" FontWeight="Medium"/>
                    <TextBox Width="40" Height="22" FontWeight="Medium"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Content="Lực cắt Qy  =" FontSize="12" FontWeight="Medium"/>
                    <TextBox Width="40" Height="22" FontWeight="Medium"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Content="Momen Mx =" FontSize="12" FontWeight="Medium"/>
                    <TextBox Width="40" Height="22" FontWeight="Medium"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Content="Momen My =" FontSize="12" FontWeight="Medium"/>
                    <TextBox Width="40" Height="22" FontWeight="Medium"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

            <Button Content="Lưu dữ liệu" Foreground="White" Width="93" Height="30" Margin="0,20,0,0"  Command="{Binding LuuCommand}"  >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#03346E" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
